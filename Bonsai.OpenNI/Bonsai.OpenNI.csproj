<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Title>Bonsai - OpenNI</Title>
    <Description>A Bonsai library for interfacing with depth cameras through OpenNI 2.</Description>
    <Version>1.0.0</Version>
    <PackageTags>bonsai, vision, openni</PackageTags>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <LangVersion>8.0</LangVersion>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Bonsai.Core" Version="2.4.1" />
    <PackageReference Include="NiWrapper.Net.x64" Version="2.2.0.35" />
    <PackageReference Include="OpenCV.Net" Version="3.3.1" />
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
  </ItemGroup>

</Project>
